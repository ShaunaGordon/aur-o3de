_engver=0.0.0.0

chown_as_user() {
    # Change ownership to user
    if [ ! "$(logname 2>&1 >/dev/null)" ]; then
        _user=$(logname)
        _group=$(id -g -n ${_user})
    else
        _user=root
        _group=root
    fi
    chown -R ${_user}:${_group} /opt/O3DE/${_engver}
}

post_install() {
    chown_as_user
	"/opt/O3DE/${_engver}/python/get_python.sh"
}

post_upgrade() {
    chown_as_user
    "/opt/O3DE/${_engver}/python/get_python.sh"
}